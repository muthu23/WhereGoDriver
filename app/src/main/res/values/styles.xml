<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:fontFamily">@font/monteserrat_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds"
            tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark
        </item>
<!--        <item name="android:typeface">monospace</item>-->
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_40sdp</item>

<!--        <item name="android:typeface">monospace</item>-->
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color  -->
        <item name="colorControlActivated">#00B22D</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#00B22D</item>

        <item name="android:colorForeground">#FF0000</item>
        <item name="android:background">#FF0000</item>
    </style>

</resources>
